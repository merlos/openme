<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <!-- Hyphen in the directory name is invalid as a .NET namespace; override it. -->
    <RootNamespace>OpenMeWindows</RootNamespace>
    <UseWPF>true</UseWPF>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
    <ImplicitUsings>enable</ImplicitUsings>
    <!-- Publish targets: x64 and arm64 Windows -->
    <RuntimeIdentifiers>win-x64;win-arm64</RuntimeIdentifiers>
    <!-- Stay in the notification area â€” no taskbar button until a window is open -->
    <ApplicationManifest>app.manifest</ApplicationManifest>
  </PropertyGroup>

  <ItemGroup>
    <!-- System tray icon for WPF -->
    <PackageReference Include="Hardcodet.NotifyIcon.Wpf" Version="1.1.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\OpenMeKit\OpenMeKit.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Resources\openme.ico" Condition="Exists('Resources\openme.ico')" />
  </ItemGroup>

</Project>
